                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#FFF"
                android:paddingBottom="1dp"
                app:canLoop="true"
                app:indicatorAlign="center"
                app:indicatorPaddingLeft="10dp"
                app:open_mz_mode="false" />

            <LinearLayout
