                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_oval_radius"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/speaker" />

                    <com.gongwen.marqueen.SimpleMarqueeView
                        android:id="@+id/marqueeView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:flipInterval="2600"
                        android:inAnimation="@anim/in_left"
                        android:outAnimation="@anim/out_right"
                        app:marqueeAnimDuration="2000"
                        app:smvTextColor="#A1A1A1"
                        app:smvTextGravity="center_vertical"
                        app:smvTextSize="12sp"></com.gongwen.marqueen.SimpleMarqueeView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
