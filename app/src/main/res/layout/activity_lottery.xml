<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CDCDCD"
    tools:context="com.yxl.shishile.shishile.activity.LotteryActivity">
    <TextView
        android:id="@+id/lottery_title"
        android:text="重庆时时彩"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#f83e3f"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_margin="5dp"
        android:background="#Ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="17sp"
                android:text="下期开奖时间："
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/KaiJiang"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="正在开奖!!!"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <cn.iwgang.countdownview.CountdownView
                android:layout_gravity="center"
                android:id="@+id/cv_countdownViewTest1"
                 android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isHideTimeBackground="true"
                app:isShowDay="true"
                app:isShowHour="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:isShowMillisecond="true"
                app:timeTextColor="#000000"
                app:timeTextSize="22sp"
                app:isTimeTextBold="true"
                app:suffixGravity="bottom"
                app:suffixTextColor="#000000"
                app:suffixTextSize="12sp"
                app:suffixHour="时"
                app:suffixMinute="分"
                app:suffixSecond="秒"
                app:suffixMillisecond="毫秒" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:background="#ffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:id="@+id/cycle_id"
            android:text="第179期"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="开奖号码"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
           android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/six_num_01"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:width="30dp"
                android:height="30dp"
                android:background="@drawable/shape_textview" />

            <TextView
                android:id="@+id/six_num_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:width="30dp"
                android:height="30dp"
                android:background="@drawable/shape_textview"
                android:gravity="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/six_num_03"
                android:textColor="@color/black"
                android:gravity="center"
                android:height="30dp"
                android:width="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/six_num_04"
                android:textColor="@color/black"
                android:gravity="center"
                android:height="30dp"
                android:width="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/six_num_05"
                android:textColor="@color/black"
                android:gravity="center"
                android:height="30dp"
                android:width="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/six_num_06"
                android:textColor="@color/black"
                android:gravity="center"
                android:height="30dp"
                android:width="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/six_num_07"
                android:textColor="@color/black"
                android:gravity="center"
                android:height="30dp"
                android:width="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_textview_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="3dp"
        android:background="#ffff"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:background="#ffff"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="#ffff"
            android:layout_weight="1"
            android:text="历史记录"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:background="#ffff"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="走势预测" />
    </LinearLayout>
</LinearLayout>
