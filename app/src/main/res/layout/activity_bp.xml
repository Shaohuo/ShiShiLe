<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.yxl.shishile.shishile.activity.BPActivity">
    <RelativeLayout
        android:background="#f83e3f"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="用户id："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/bp_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="金币余额:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/gold_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="2"
            android:background="#FFF"
            android:gravity="end"
            android:text="—"
            android:textColor="#f83e3f" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center"
            android:text="充值订单"
            android:textColor="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="2"
            android:background="#FFF"
            android:gravity="start"
            android:text="—"
            android:textColor="#f83e3f" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="充值金额："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="#FFF"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--  <RadioGroup
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <RadioButton
              android:layout_marginTop="5dp"
              android:id="@+id/bp_radio_1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="100金币" />
          <RadioButton
              android:layout_marginTop="5dp"
              android:id="@+id/bp_radio_2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="300金币" />
          <RadioButton
              android:layout_marginTop="5dp"
              android:id="@+id/bp_radio_3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="500金币" />
      </RadioGroup>-->



    </LinearLayout>


    <LinearLayout
        android:background="#FFF"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:src="@drawable/button_select_100"
            android:id="@+id/bp_radio_1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:src="@drawable/button_select_300"
            android:id="@+id/bp_radio_2"

            android:text="300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginLeft="15dp"
            android:src="@drawable/button_select_500"
            android:background="@null"
            android:id="@+id/bp_radio_3"

            android:text="500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginLeft="15dp"
            android:id="@+id/other_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_other"
            android:text="其他金额"
            android:textSize="11sp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/fuhao"
            android:visibility="gone"
            android:textColor="#f83e3f"
            android:layout_gravity="center"
            android:textSize="27sp"
            android:text="¥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:theme="@style/MyEditText"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLines="1"
            android:maxLength="5"
            android:id="@+id/money_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="最低充值金额（20元）"
            android:inputType="number"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="2"
            android:background="#FFF"
            android:gravity="end"
            android:text="—"
            android:textColor="#f83e3f" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center"
            android:text="支付方式"
            android:textColor="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="2"
            android:background="#FFF"
            android:gravity="start"
            android:text="—"
            android:textColor="#f83e3f" />
    </LinearLayout>
    <LinearLayout
        android:background="#FFF"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:text="应付金额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/money_num"
            android:textColor="#000"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/weixin_pay"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/weixin_pay"
            android:text=""
            android:layout_width="150dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/zhifu_pay"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/zhifu_pay"
            android:text=""
            android:layout_width="120dp"
            android:layout_height="40dp" />
    </LinearLayout>




</LinearLayout>
